{
    "name": "tio-jobs/asaas-php",
    "description": "The missing ASAAS PHP/Laravel package",
    "license": "MIT",
    "authors": [
        {
            "name": "Tio Jobs",
            "email": "icarojobsoficial@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.28.0 || ^11.0",
        "illuminate/container": "^10.28.0 || ^11.0",
        "illuminate/contracts": "^10.28.0 || ^11.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "larastan/larastan": "^2.7",
        "pestphp/pest": "^2.28",
        "pestphp/pest-plugin-faker": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.2",
        "pestphp/pest-plugin-watch": "^2.0",
        "captainhook/captainhook": "^5.19",
        "friendsofphp/php-cs-fixer": "^3.46",
        "phpstan/phpstan": "^1.10",
        "ciareis/bypass": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "TioJobs\\AsaasPhp\\": "src/"
        },
        "files": [
            "src/Helpers/custom-helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TioJobs\\AsaasPhp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TioJobs\\AsaasPhp\\Providers\\AsaasPhpServiceProvider"
            ],
            "aliases": {
                "AsaasPhp": "TioJobs\\AsaasPhp\\Facades\\AsaasPhp"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
        "scripts": {
        "lint": [
            "./vendor/bin/php-cs-fixer fix"
        ],
        "test:style": [
            "./vendor/bin/php-cs-fixer fix --diff --dry-run"
        ],
        "test:types": [
            "./vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "test:integration": [
            "./vendor/bin/pest --order-by random"
        ],
        "test:asaas": [
            "ACCESS_ASAAS_API=true ./vendor/bin/pest --order-by random"
        ],
        "tests": [
            "@test:style",
            "@test:types",
            "@test:integration"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
